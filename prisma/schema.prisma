generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id          String    @id @default(cuid())
  createdAt   DateTime  @default(now())
  title        String
  img          String
  slug       String @unique
  products    ParentProduct[]
  subCategories SubCategory[]
}

model SubCategory {
  id          String    @id @default(cuid())
  createdAt   DateTime  @default(now())
  title        String
  img          String
  isFeatured Boolean   @default(false)
  slug       String @unique
  category    Category @relation(fields: [categorySlug], references: [slug])
  categorySlug  String
  products    ParentProduct[]
}

model ParentProduct {
  id          String    @id @default(cuid())
  createdAt   DateTime  @default(now())
  title        String
  banner         String?
  genre        String?
  desc        String
  slug       String @unique
  isFeatured Boolean   @default(false)
  category    Category @relation(fields: [categorySlug], references: [slug])
  categorySlug  String
  subCategory    SubCategory @relation(fields: [subCategorySlug], references: [slug])
  subCategorySlug  String
  subProducts SubProduct[]
}

model SubProduct {
  id          String    @id @default(cuid())
  code       String @unique
  createdAt   DateTime  @default(now())
  title        String
  imgs         String[]
  price       Decimal
  isNew   Boolean   @default(false)
  sizesAvailable  String[]
  slug       String @unique
  parentProduct ParentProduct @relation(fields: [parentProductSlug], references: [slug])
  parentProductSlug  String
}

model Order {
  id          String    @id @default(cuid())
  createdAt   DateTime  @default(now())
  status      String
  total       Decimal
  products    Json[]
  intent_id String @unique
  // user       User @relation(fields: [userId], references: [id])
}